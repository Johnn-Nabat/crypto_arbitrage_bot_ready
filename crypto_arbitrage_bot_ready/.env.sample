# Токен Telegram бота
BOT_TOKEN=твой_telegram_bot_token_сюда

# API ключи и секреты для бирж (пример для KuCoin, Bybit, MEXC)
KUCOIN_API_KEY=твой_kucoin_api_key
KUCOIN_API_SECRET=твой_kucoin_api_secret
KUCOIN_API_PASSPHRASE=твой_kucoin_api_passphrase

BYBIT_API_KEY=твой_bybit_api_key
BYBIT_API_SECRET=твой_bybit_api_secret

MEXC_API_KEY=твой_mexc_api_key
MEXC_API_SECRET=твой_mexc_api_secret

# Минимальный спред для арбитража (в процентах)
MIN_SPREAD_PERCENT=2

# Язык бота (ru/en)
LANGUAGE=ru

# Включение режима торговли (true/false)
TRADING_ENABLED=false

# OpenAI API ключ (если есть интеграция ИИ)
OPENAI_API_KEY=твой_openai_api_key

# Логирование (true/false)
ENABLE_LOGGING=true
